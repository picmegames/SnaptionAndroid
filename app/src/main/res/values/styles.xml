<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="LoginTheme" parent="AppTheme"/>
    <style name="CreateGameTheme" parent="AppTheme"/>
    <style name="StatusBarTheme" parent="AppTheme" />
    <style name="AppBarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FacebookLoginButton">
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/facebook_button</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="GoogleSignInButton">
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/facebook_button</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
</resources>
