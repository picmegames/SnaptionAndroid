<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    app:cardCornerRadius="@dimen/cardview_default_radius">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/picker_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="25dp"/>

        <TextView
            android:id="@+id/picker_name"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_toEndOf="@+id/picker_image"
            android:layout_toStartOf="@+id/menu_button"
            android:layout_marginTop="10dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:gravity="center_vertical"
            android:textSize="14sp"/>

        <ImageButton
            android:id="@+id/menu_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_more_vert_black_24dp"/>

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@+id/picker_image"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/app_name"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/captioner_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignBottom="@+id/image"
            android:layout_alignEnd="@+id/image"
            android:layout_marginBottom="-30dp"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:id="@+id/top_caption_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image"
            android:layout_marginStart="25dp"
            android:paddingTop="15dp"
            android:text="@string/top_caption"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/captioner_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/top_caption_title"
            android:layout_marginStart="25dp"/>

        <TextView
            android:id="@+id/top_caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/captioner_name"
            android:layout_centerVertical="true"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="15dp"
            android:lines="2"
            android:textSize="14sp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>