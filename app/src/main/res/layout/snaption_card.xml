<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners"
        android:contentDescription="@string/app_name"
        android:transitionName="@string/shared_transition"/>

    <TextView
        android:id="@+id/top_caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:layout_margin="10dp"
        android:maxLines="4"
        android:ellipsize="end"
        android:textSize="14sp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/captioner_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/top_caption"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/captioner_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/captioner_image"
        android:layout_below="@id/top_caption"
        android:layout_margin="10dp"
        android:textStyle="bold"/>

</RelativeLayout>
